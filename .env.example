# ============================================================
# Heri-Sci Backend Environment Variables
# Copy this file to .env and fill in your actual values
# ============================================================

# Google Gemini API Key (Required)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional - for fallback)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# Image Processing Configuration
MAX_IMAGE_SIZE=4096  # Maximum dimension in pixels
DEFAULT_QUALITY=85   # JPEG quality (0-100)
COMPRESSION_LEVEL=6  # PNG compression (0-9)

# AI Model Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Cache Configuration
ENABLE_CACHE=True
CACHE_TIMEOUT=3600  # 1 hour in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# ============================================================
# Notes:
# ============================================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and private
# 3. Use different keys for development and production
# 4. Rotate keys regularly for security
# ============================================================
